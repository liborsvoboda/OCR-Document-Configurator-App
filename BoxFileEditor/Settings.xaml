            <TextBlock Grid.ColumnSpan="2" Text="Vyberte jazyky dokumentu:" TextWrapping="Wrap" HorizontalAlignment="Left" Height="36" Margin="10,16,0,0" VerticalAlignment="Top" Width="78" Padding="0"/>
